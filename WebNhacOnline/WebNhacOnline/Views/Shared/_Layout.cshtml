<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Roboto:100,300,300i,400,700,900">

    <link href="~/css/style.css" rel="stylesheet" />
    <link href="~/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/fonts.css" rel="stylesheet" />
    <style>
        html.ie-10 .ie-panel, html.lt-ie-10 .ie-panel {
            display: block;
        }
        .rd-navbar-main-element {
            width: 920px;
            position: relative;
            left: 90px;
            background-color: gray;
            height: 50px;
        }
            .rd-navbar-main-element .rd-navbar-nav {
                width: 920px;
                height: 50px;
                background-color: greenyellow   ;
            }
        .rd-navbar-nav .rd-nav-item {
            list-style-type:none;
            display:inline-block;
        }
        .rd-nav-item {
            width: 145px;
            height: 30px;
            background-color: greenyellow;
            text-align: center;
            padding-top: 10px;
        }
        .rd-navbar-search {
            width: 250px;
            position: relative;
            left: 925px;
            top: -65px;
        }
    </style>
</head>
<body>
    <div class="rd-navbar-main-element">
        <div class="rd-navbar-nav-wrap">
            <!-- RD Navbar Nav-->
            <ul class="rd-navbar-nav">
                <li class="rd-nav-item active">
                    <a class="rd-nav-link" href="index.html">Trang chủ</a>
                </li>
                <li class="rd-nav-item">
                    <a class="rd-nav-link" href="about.html">Giới thiệu</a>
                </li>
                <li class="rd-nav-item">
                    <a class="rd-nav-link" href="about.html">Nhạc mới</a>
                </li>
                <li class="rd-nav-item">
                    <a class="rd-nav-link" href="about.html">Thể loại</a>
                </li>
                <li class="rd-nav-item">
                    <a class="rd-nav-link" href="typography.html">Đăng ký</a>
                </li>
                <li class="rd-nav-item">
                    <a class="rd-nav-link" href="contacts.html">Đăng nhập</a>
                </li>
            </ul>
        </div>
        <!-- RD Navbar Search-->
        <div class="rd-navbar-search">
            <button class="rd-navbar-search-toggle rd-navbar-fixed-element-1" data-rd-navbar-toggle=".rd-navbar-search"><span></span></button>
            <form class="rd-search" action="#" method="GET">
                <div class="form-wrap">
                    <label class="form-label" for="rd-navbar-search-form-input">Search</label>
                    <input class="rd-navbar-search-form-input form-input" id="rd-navbar-search-form-input" type="text" name="s" autocomplete="off">
                    <div class="rd-search-results-live" id="rd-search-results-live"></div>
                </div>
                <button class="rd-search-form-submit mdi mdi-magnify" type="submit"></button>
            </form>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        
    </div>

    @Scripts.Render("~/bundles/jquery")
 
</body>
</html>
